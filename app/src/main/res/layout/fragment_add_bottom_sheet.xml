<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/AppTheme.BottomSheetDialog">

	<TextView
		style="@style/TextAppearance.Material.DialogWindowTitle.BottomSheetDialog"
		android:id="@+id/txtAddBottomSheet1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/spacing_middle"
		android:text="@string/add"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/rclAddBottomSheet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/spacing_large"
		android:layout_marginBottom="@dimen/activity_vertical_margin"
		app:layout_constraintTop_toBottomOf="@id/txtAddBottomSheet1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>

